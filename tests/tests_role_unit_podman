#!/usr/bin/env bash_unit

RU_ENV_TYPE=podman
[ -z "${RU_ENV_IMAGE}" ] && export RU_ENV_IMAGE=debian10
. lib/role_unit

test_i_am_in_a_podman_container() {
  assert_equals "guest" "$(ru_ansible_fact ansible_virtualization_role)"
  ru_ansible_facts
  assert_equals "container" "$(ru_ansible_fact ansible_virtualization_type)"
}

test_process_can_be_launched_in_background() {
  ru_run -d sleep 60
  assert "ru_run pgrep sleep"
  ru_run pkill sleep
}

setup_suite() {
  ru_init
}

# vim: syntax=sh
